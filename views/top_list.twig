{% extends "base.html" %}

{% block body %}
    <h1>Artistes les plus écoutés</h1>
{% endblock %}

{% block ju %}
   
    <table id="topDate" class="display" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Utilisateur</th>
            <th>Date</th>
            <th>Artiste</th>
            <th>Classement</th>
        </tr>
    </thead>
    <tbody>
        {% for top in tops %}
            <tr>
                <td style="text-align: center; vertical-align: middle;">{{ top.id }}</td>
                <td style="text-align: center; vertical-align: middle;">{{ top.user.name}}</td>
                <td style="text-align: center; vertical-align: middle;">{{ top.dt|date("d/m/Y") }}</td>
                <td style="text-align: center; vertical-align: middle;">{{ top.artist.name}}</td>
                <td style="text-align: center; vertical-align: middle;">{{ top.classement }}</td>
            </tr>
        {% endfor %}    
    </tbody>
    </table>

    <script>
    $(document).ready(function() {
        $('#topDate').DataTable();
    } );
    </script>
   
   
{% endblock %}