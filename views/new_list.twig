{# affichage des tops par dates (historique) #}

{% extends "base.html" %}

{% block body %}
    <h1>Liste des tops par dates</h1>
{% endblock %}

{% block ju %}
   
    <ul>
        {% for dt in dts %}
            <li>{{ dt["dt"]|date("d/m/Y") }}</li>
            <div>
            <a href="?c=topDate&t=listeDate&dt={{dt['dt']|date ("Y-m-d")}}"><input type="button" value ="Afficher"></a>
            <input type="hidden" id="id" name="topDate" value="{{top_date}}">
        </div>
        {% endfor %}
    </ul>

    <script>
        $(document).ready(function() {
            $('#topDate').DataTable();
        });
    </script>
   
   
{% endblock %}

     